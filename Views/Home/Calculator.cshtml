@{
    ViewBag.Title = "IS 413 Calculator";
    ViewBag.MyName = "Tyler Smith";
}
<body>
    <h2>413 Grade Calculator</h2>
    <div class="calculator">
        <form id="calculator" action="#" method="get" onsubmit="return false">
            <label>Assignments: </label>
            <div class="forminput">
                <input type="number" id="assignments" name="assignments" min="0" max="100" maxlength="3">%
            </div>
            <label>Group Project: </label>
            <div class="forminput">
                <input type="number" id="groupproject" name="groupproject" min="0" max="100" maxlength="3">%
            </div>
            <label>Quizzes: </label>
            <div class="forminput">
                <input type="number" id="quizzes" name="quizzes" min="0" max="100" maxlength="3">%
            </div>
            <label>Exams: </label>
            <div class="forminput">
                <input type="number" id="exams" name="exams" min="0" max="100" maxlength="3">%
            </div>
            <label>INTEX: </label>
            <div class="forminput">
                <input type="number" id="intex" name="intex" min="0" max="100" maxlength="3">%
            </div>
            <input type="submit" value="Calculate Grade" id="submit" />
            <p id="gradeoutput">Final Grade: </p>
        </form>
    </div>
</body>